<?xml version="1.0" encoding="utf-8"?>
<com.fyp.resilience.view.FileView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <TextView
        android:id="@+id/file_view_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:lines="1"
        android:maxLength="25"
        android:scrollHorizontally="true"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/file_view_item_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/file_view_item_pieces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_view_item_name"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/file_view_item_connections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/file_view_item_pieces"
        android:textIsSelectable="false" />

    <com.fyp.resilience.view.PieceProgressIndicator
        android:id="@+id/progress_view_pieces"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/file_view_item_pieces" />

    <TextView
        android:id="@+id/file_view_whole_status"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/file_view_item_pieces"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textIsSelectable="false" />

</com.fyp.resilience.view.FileView>